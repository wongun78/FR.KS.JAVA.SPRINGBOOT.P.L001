{
	"info": {
		"_postman_id": "quiz-api-collection",
		"name": "Quiz Application API",
		"description": "REST API collection for Quiz Application - Question endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Questions",
			"item": [
				{
					"name": "Create Question",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"What is the capital of France?\",\n  \"type\": \"SINGLE_CHOICE\",\n  \"score\": 10,\n  \"quizId\": \"{{quizId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/questions",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "questions"]
						},
						"description": "Create a new question"
					},
					"response": []
				},
				{
					"name": "Get All Questions (Paginated)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/questions?page=0&size=10&sortBy=content&direction=asc",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "questions"],
							"query": [
								{
									"key": "page",
									"value": "0",
									"description": "Page number (0-indexed)"
								},
								{
									"key": "size",
									"value": "10",
									"description": "Page size"
								},
								{
									"key": "sortBy",
									"value": "content",
									"description": "Sort field (id, content, type, score)"
								},
								{
									"key": "direction",
									"value": "asc",
									"description": "Sort direction (asc, desc)"
								}
							]
						},
						"description": "Get all questions with pagination and sorting"
					},
					"response": []
				},
				{
					"name": "Get Question by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/questions/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "questions", "{{questionId}}"]
						},
						"description": "Get a specific question by ID"
					},
					"response": []
				},
				{
					"name": "Update Question",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"content\": \"What is the capital of Germany?\",\n  \"type\": \"MULTIPLE_CHOICE\",\n  \"score\": 15,\n  \"quizId\": \"{{quizId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/questions/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "questions", "{{questionId}}"]
						},
						"description": "Update an existing question"
					},
					"response": []
				},
				{
					"name": "Delete Question",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/questions/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "questions", "{{questionId}}"]
						},
						"description": "Delete a question by ID"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "questionId",
			"value": "",
			"type": "string"
		},
		{
			"key": "quizId",
			"value": "",
			"type": "string"
		}
	]
}
